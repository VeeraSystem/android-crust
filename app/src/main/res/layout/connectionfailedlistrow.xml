<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    cardView:cardBackgroundColor="@color/listItem"
    cardView:cardCornerRadius="3dp"
    cardView:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/connectionFailedUsername"
                android:layout_width="110dp"

                android:layout_height="wrap_content"
                android:gravity="start"


                android:paddingLeft="12dp"
                android:text="User"

                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/connectionFailedIp"
                android:layout_width="240dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/connectionFailedUsername"
                android:gravity="bottom"
                android:paddingLeft="10dp"

                android:paddingTop="5dp"
                android:text="192.168.092.304"

                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/separatorVertical"
                android:layout_width="2dp"
                android:layout_height="match_parent"

                android:layout_toRightOf="@id/connectionFailedIp"

                android:background="#949CAF" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@id/separatorVertical"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                >

                <TextView
                    android:text="State"
                    android:id="@+id/connectionFailedState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"



                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/connectionFailedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"

                    android:text="123123"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"


                android:background="#949CAF" />

            <TextView
                android:id="@+id/connectionFailedFailReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:padding="3dp"
                android:text="2014/12/34 12:23"

                android:textColor="#FFFFFF"

                android:textSize="10sp"
                android:typeface="monospace" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
