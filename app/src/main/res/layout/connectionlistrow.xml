<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    cardView:cardBackgroundColor="@color/listItem"
    cardView:cardCornerRadius="3dp"
    cardView:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/connectionRemoteUser"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/itemListTextColor_dark"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/connectionIp"
                android:layout_width="240dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/connectionRemoteUser"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/itemListTextColor_dark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/separatorVertical"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/connectionIp"
                android:layout_toRightOf="@id/connectionIp"
                android:background="#949CAF" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/separatorVertical"
                android:layout_toRightOf="@id/separatorVertical"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/connectionState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/itemListTextColor_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/connectionPid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/itemListTextColor_dark"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#949CAF" />

            <TextView
                android:id="@+id/connectionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:textColor="@color/itemListTextColor_light"
                android:textSize="10sp"
                android:typeface="monospace" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
