<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainSessionCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardView:cardBackgroundColor="@color/listItem"
    cardView:cardCornerRadius="3dp"
    cardView:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/sessionRemoteUser"
                android:layout_width="110dp"

                android:layout_height="wrap_content"
                android:gravity="start"


                android:paddingLeft="12dp"
                android:text="User"

                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sessionIp"
                android:layout_width="240dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/sessionRemoteUser"
                android:gravity="bottom"
                android:paddingLeft="10dp"

                android:paddingTop="5dp"
                android:text="192.168.092.304"

                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/separatorVertical"
                android:layout_width="2dp"
                android:layout_height="match_parent"

                android:layout_toRightOf="@id/sessionIp"

                android:background="#949CAF" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/separatorVertical"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/sessionState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"

                    android:padding="5dp"
                    android:text="State"


                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sessionPid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="1"
                    android:padding="5dp"

                    android:text="123123"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"


                android:background="#949CAF" />

            <TextView
                android:id="@+id/sessionConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:padding="3dp"
                android:text="ssh://thekeeper session name is here"


                android:textColor="#FFFFFF"

                android:textSize="10sp"
                android:typeface="monospace" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"


                android:background="#949CAF" />

            <TextView
                android:id="@+id/sessionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:padding="3dp"
                android:text="2014/12/34 12:23"

                android:textColor="#ADBDDF"

                android:textSize="10sp"
                android:typeface="monospace" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <Button
                android:id="@+id/killSessionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kill"

                android:textColor="#000000" />

            <Button
                android:id="@+id/messageSessionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandAreaMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/sessionMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:ems="10"
                android:inputType="textLongMessage"
                android:textColor="#000000" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:weightSum="3">

                <Button
                    android:id="@+id/sessionCancelMessageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Close"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/sessionSendMessageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Send"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
